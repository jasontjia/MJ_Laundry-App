datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   // admin, kasir
  createdAt DateTime @default(now())
}

model Customer {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String?
  address   String?
  orders    Order[]
}

model Order {
  id         Int      @id @default(autoincrement())
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId Int
  service    String
  weight     Float
  price      Float
  status     String   @default("pending") // pending | in-progress | completed | picked-up
  payment    String   @default("unpaid")  // unpaid | partial | paid
  createdAt  DateTime @default(now())
}

